= simple_form_for @article do |f|
  - if @article.errors.any?
    =error_messages_for @article

  .form-inputs
    -#=raise section_options.inspect
    -#=f.input :section do
    =f.association :section#, options_for_select(section_options,f.object.try(:section_id))
    =f.input :title
    =f.input :description
    =f.input :body

  .actions
    = f.submit 'Save'
