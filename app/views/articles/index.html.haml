.row
  .col-12.col-xl-9
    -if current_user.try(:admin?)
      =link_to new_article_path, class: 'btn btn-success' do
        =icon('fas', 'plus')
        =t('articles.new')
    -if params[:section].present? && params[:section] != ''
      %h1.text-center=section_name(params[:section])
    -elsif @favorite
      %h1.text-center=t('articles.favorite_articles')
    -else
      %h1.text-center=t('articles.articles')
    - @articles.each do |article|

      %hr.hr.mb-3
      %h3.b.text-center=link_to article.title, article
      %h5.text-center= article.description

      -#= link_to 'Show', article
      -#= link_to 'Edit', edit_article_path(article)
